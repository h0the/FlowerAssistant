<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlowerAssistant.Views.InfDetailPage"
             Title="Это интересно">
    <ScrollView>
        <StackLayout Margin="20">
            <Label Text="{Binding NameInf}" HorizontalOptions="Center" Style="{DynamicResource TitleStyle}" />
            <Label Text="{Binding PriceInf}" FontAttributes="Italic" HorizontalOptions="Center" />

            <Image Source="{Binding ImageUrlInf}" HeightRequest="200" WidthRequest="200" HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding DetailsInf}" Style="{DynamicResource BodyStyle}" />
        </StackLayout>
    </ScrollView>
    
</ContentPage>